{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "src/lib/*"
      ],
      "$components/*": [
        "src/lib/components/*"
      ],
      "$scripts/*": [
        "src/lib/scripts/*"
      ],
      "$stores/*": [
        "src/lib/stores/*"
      ],
      "$shared/*": [
        "src/lib/components/shared/*"
      ],      
      // "$lib": [
      //   "src/lib"
      // ],
      // "$components": [
      //   "src/lib/components"
      // ],
      // "$scripts": [
      //   "src/lib/scripts"
      // ],
      // "$stores": [
      //   "src/lib/stores"
      // ],
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ]
}